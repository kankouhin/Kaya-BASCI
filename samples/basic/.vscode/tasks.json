{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "KayaBASIC Build(DEBUG)",
            "type": "shell",
            "command": "bpp",
            "args": [
                "-k",
                "-g",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "KayaBASIC Build(RELEASE)",
            "type": "shell",
            "command": "bpp",
            "args": [
                "-g",
                "-r",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }        
    ]
}